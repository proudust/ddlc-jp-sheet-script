{
  "name": "ddlc-jp-sheet-script",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint --ignore-path .gitignore src",
    "lint:prettier": "prettier --check --ignore-path .gitignore .",
    "test": "run-p -l -c --aggregate-output lint:* unit",
    "unit": "jest",
    "build": "rimraf dist && webpack && cpy src/appsscript.json dist",
    "deploy": "ts-node -O '{\"module\":\"commonjs\"}' deploy.ts"
  },
  "author": "proudust",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "^2.4.0",
    "@types/google-apps-script": "^1.0.37",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.4",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.31.0",
    "eslint-plugin-googleappsscript": "^1.0.4",
    "eslint-plugin-jest": "^24.4.0",
    "gas-webpack-plugin": "^2.0.2",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.0.5",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
