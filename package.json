{
  "name": "ddlc-jp-sheet-script",
  "private": true,
  "scripts": {
    "start": "deno run --allow-read --allow-write src/cli/cli.ts",
    "fix": "run-s fix:*",
    "fix:deno-lint": "deno lint --config deno.jsonc",
    "fix:deno-fmt": "deno fmt --config deno.jsonc",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:deno-lint": "deno lint --config deno.jsonc",
    "lint:deno-fmt": "deno fmt --check --config deno.jsonc",
    "test": "run-p -l -c --aggregate-output lint:* unit",
    "unit": "deno test src",
    "build": "deno run --allow-read --allow-env --allow-net --allow-write --allow-run --no-check=remote build.ts",
    "deploy": "deno run --allow-read --allow-env --allow-net --allow-write --allow-run --no-check=remote build.ts deploy"
  },
  "author": "proudust",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "^2.4.1",
    "npm-run-all": "^4.1.5"
  }
}
