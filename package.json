{
  "name": "gas-clasp-starter",
  "version": "1.2.1",
  "private": true,
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts --fix .",
    "lint:ci": "npm run lint -- --format junit --output-file reports/eslint.xml",
    "test": "jest --reporters=default",
    "test:ci": "jest --ci --reporters=jest-junit",
    "build": "npm run lint && npm run test && rimraf dist && webpack && cpx src/appsscript.json dist",
    "build:ci": "npm run lint:ci && npm run test:ci && rimraf dist && webpack && cpx src/appsscript.json dist",
    "deploy": "npm run build && rimraf dist/client.js && clasp push"
  },
  "author": "proudust",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "2.2.1",
    "@types/google-apps-script": "0.0.57",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "@typescript-eslint/eslint-plugin": "2.0.0",
    "@typescript-eslint/parser": "2.0.0",
    "cpx": "1.5.0",
    "eslint": "6.2.2",
    "eslint-config-prettier": "6.1.0",
    "eslint-plugin-googleappsscript": "1.0.3",
    "eslint-plugin-jest": "22.15.2",
    "eslint-plugin-prettier": "3.1.0",
    "gas-webpack-plugin": "1.0.2",
    "html-loader": "0.5.5",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.9.0",
    "jest-junit": "8.0.0",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "typescript": "3.6.2",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.7"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
